# ===== HERMES Docker Environment Configuration =====
# Copy to .env.production and set actual values

# ===== Application Version =====
VERSION=1.0.0
BUILD_DATE=2025-01-17T00:00:00Z
VCS_REF=latest

# ===== Environment =====
ENVIRONMENT=production
LOG_LEVEL=info

# ===== API Service =====
API_PORT=8000
API_WORKERS=4

# ===== PostgreSQL Database =====
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD_32_CHARS
POSTGRES_DB=hermes
POSTGRES_PORT=5432

# ===== Redis Cache =====
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_32_CHARS
REDIS_PORT=6379

# ===== Security Keys (CRITICAL - CHANGE IN PRODUCTION) =====
JWT_SECRET_KEY=CHANGE_ME_JWT_SECRET_64_CHARACTERS_MINIMUM_FOR_PRODUCTION_SECURITY
SECRET_KEY=CHANGE_ME_APP_SECRET_32_CHARACTERS_MINIMUM

# ===== OpenAI Integration =====
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORGANIZATION=org-your-org-id

# ===== Clio CRM Integration =====
CLIO_CLIENT_ID=your-clio-client-id
CLIO_CLIENT_SECRET=your-clio-client-secret
CLIO_REDIRECT_URI=https://your-domain.com/api/v1/integrations/clio/callback

# ===== LawPay Integration =====
LAWPAY_API_KEY=your-lawpay-api-key
LAWPAY_MERCHANT_ID=your-merchant-id

# ===== Stripe Billing =====
STRIPE_API_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===== Supabase =====
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===== Monitoring (Optional) =====
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD

# ===== Email Service (Optional) =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password

# ===== Domain Configuration =====
DOMAIN=hermes.example.com
CORS_ORIGINS=https://hermes.example.com,https://www.hermes.example.com

# ===== Feature Flags =====
ENABLE_VOICE_PIPELINE=true
ENABLE_CLIO_INTEGRATION=true
ENABLE_BILLING=true
ENABLE_ANALYTICS=true

# ===== Performance Tuning =====
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
REDIS_MAX_CONNECTIONS=50

# ===== Security Settings =====
SECURE_COOKIES=true
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax
