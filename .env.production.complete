# HERMES Platform - Complete Production Environment Configuration
# This file contains ALL required environment variables for production deployment
# Copy to .env and configure with your actual values

#########################
# Core Application Settings
#########################
DEBUG=false
DEMO_MODE=false
ENVIRONMENT=production
API_HOST=0.0.0.0
API_PORT=8080

#########################
# Security & Compliance
#########################
# JWT Authentication Keys (Generate with: openssl genrsa -out jwt_private.pem 2048)
JWT_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----"
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----"
JWT_ALGORITHM=RS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=1

# API Key Encryption (Auto-generated by deployment script)
API_KEY_ENCRYPTION_SECRET=your_fernet_key_here

# CORS Configuration for production domains
CORS_ALLOW_ORIGINS=https://hermes.parallax-ai.app,https://admin.hermes.parallax-ai.app,https://api.hermes.parallax-ai.app

#########################
# Database Configuration
#########################
# Primary database connection (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:your_password@your_project.supabase.co:5432/postgres

# Supabase Configuration
SUPABASE_URL=https://your_project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Redis Cache (Optional but recommended for performance)
REDIS_URL=redis://your_redis_host:6379

#########################
# AI Service Configuration
#########################
# OpenAI API (Required for LLM functionality)
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4

#########################
# Voice Processing
#########################
WHISPER_MODEL=base
WHISPER_DEVICE=cpu
SAMPLE_RATE=16000
CHUNK_SIZE=1024
MAX_AUDIO_LENGTH_SECONDS=30
RESPONSE_TIMEOUT=0.1
CONFIDENCE_THRESHOLD=0.85

#########################
# Legal & Compliance Settings
#########################
ENABLE_DISCLAIMERS=true
AUDIT_LOGGING=true
CONFIDENCE_THRESHOLD=0.9

#########################
# Billing & Subscription (Stripe)
#########################
STRIPE_API_KEY=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_signing_secret_here
STRIPE_PRICE_ENTERPRISE=price_your_enterprise_plan_id_here
STRIPE_TRIAL_DAYS=0
ENTERPRISE_PLAN_PRICE=2497
MAX_MONTHLY_INTERACTIONS=10000

#########################
# Legal Practice Integration (Clio)
#########################
CLIO_CLIENT_ID=your_clio_client_id_here
CLIO_CLIENT_SECRET=your_clio_client_secret_here
CLIO_REDIRECT_URI=https://your-domain.com/auth/clio/callback
CLIO_TOKEN_ENCRYPTION_KEY=your_base64_encoded_fernet_key_here

#########################
# Third-party Integrations
#########################
ZAPIER_API_KEY=your_zapier_api_key_here
GITHUB_TOKEN=your_github_token_here
MEM0_API_KEY=your_mem0_api_key_here

#########################
# Monitoring & Analytics
#########################
# Google Cloud credentials for monitoring
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Prometheus metrics
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus_multiproc

#########################
# HERMES SaaS Licensing
#########################
# These are automatically configured for authorized SaaS deployments
HERMES_LICENSE_KEY=your_enterprise_license_key_here
HERMES_TENANT_ID=your_tenant_id_here
HERMES_API_BASE=https://api.hermes.parallax-ai.app

#########################
# GCP Deployment Configuration
#########################
# These are used by deployment scripts
GCP_PROJECT_ID=your-hermes-enterprise-project
GCP_REGION=us-central1
GCP_SERVICE=default

#########################
# Email & Communication
#########################
# SMTP settings for notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
FROM_EMAIL=noreply@your-domain.com

#########################
# Advanced Configuration
#########################
# Connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Session management
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict

# Content Security Policy
CSP_DEFAULT_SRC='self'
CSP_SCRIPT_SRC='self' 'unsafe-eval'
CSP_STYLE_SRC='self' 'unsafe-inline'

#########################
# Development Tools (Commented out for production)
#########################
# Uncomment only for development environments
# LOG_LEVEL=DEBUG
# ENABLE_SWAGGER=true
# RELOAD_ON_CHANGE=true
# TEST_DATABASE_URL=sqlite:///./test.db