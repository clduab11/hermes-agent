{
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/habits/(.*)",
      "destination": "/habits/index.html"
    },
    {
      "source": "/pricing",
      "destination": "/habits/index.html"
    },
    {
      "source": "/billing",
      "destination": "/habits/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*).(js|css|woff|woff2|ttf|otf|eot|svg|png|jpg|jpeg|gif|ico)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "env": {
    "NODE_VERSION": "18.x"
  }
}
